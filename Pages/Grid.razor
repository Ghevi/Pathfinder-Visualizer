@code {
    private Boolean IsMouseDown;
    private void OnMouseToggle() => IsMouseDown = !IsMouseDown;
}

<table border="1" style=" border-color: rgb(175, 216, 248); border-style: solid" @onmousedown="OnMouseToggle" @onmouseup="OnMouseToggle">
    @for (int i = 0; i < 45; i++)
    {
        <tr>
            @for (int j = 0; j < 100; j++)
            {
                <Node IsMouseDown="IsMouseDown"></Node>
            }
        </tr>
    }
</table>